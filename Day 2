//To Create a Vector
  Vector Name = c(Vector Data)

//To include the column names or the heading use this
  days= c("Monday", "Tuesday", "Wednesday", "Thursday", "Friday")
  names(Vector Name) = days
  Vector Name
  
//To calculate the sum
  sum(Vector Name) = Vector_Sum_
  
